<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/messageBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/btn_default_more_light">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/container_card_data"
        android:background="@color/btn_click_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/colorAccentDark"
            android:textSize="20sp"
            tools:text="3A自杀 喜大普奔" />

        <TextView
            android:id="@+id/des_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            tools:text="疑似表白遭奶茶拒绝？本台新闻为您报道。\n记者：张新伟" />

    </LinearLayout>
</FrameLayout>

